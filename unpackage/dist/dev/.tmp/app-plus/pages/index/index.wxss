/* 轮播图 */
.carouselBox{
	width: 100%;
	height: 440rpx;
}
.swiper-navigator,
.carouselImg{
	width: 100%;
	height: 100%;
}
/* 内容块 */
.block-wrapper{
	margin: 12rpx 0;
	padding: 20rpx;
}
/* 二级标题 */
.sec-title-wapper{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	padding-bottom: 20rpx;
}
.sec-ico{
	width: 30rpx;
	height: 30rpx;
	margin-top: 10rpx;
}
.sec-title{
	font-size: 20px;
	margin-left: 20rpx;
	font-weight: 600;
}
/* 热门超级英雄海报 */
.poster-content-wrapper{
	white-space: nowrap;
	width: 100%;
}
.single-poster{
	/* padding-top: 30upx; */
}
.scroll-view-item{
	display: inline-block;
	margin: 0 10rpx;
}
.moviePoster{
	width: 200rpx;
	height: 270rpx;
}
.movieName{
	margin-top: 6rpx;
	width: 200rpx;
	font-size: 16px;
	font-weight: 400;
	white-space: no-nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
/* 热门超级英雄预告 */
.trailer-content-wrapper{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	/* padding-top: 30upx; */
}
.single-trailer{
	margin-top: 10rpx;
	width: 350rpx;
	height: 220rpx;
}
/* 猜你喜欢 */
.single-recommend{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	margin: 10rpx 0;
}
.recommend-left{
}
.recommend-img{
	width: 180rpx;
	height: 240rpx;
}
.recommend-center{
	width: 320rpx;
	height: 240rpx;
	font-size: 14px;
	color: #808080;
}
.recommend-name{
	font-size: 18px;
	color: black;
	width: 320rpx;
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.recommend-basicInfo{
}
.recommend-releaseDate{
}
